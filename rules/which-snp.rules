rule which_snp:
        input:
                "{filename}"
        output:
                "{filename}.tmp"
        shell:
                """
                Rscript R/which-snp.R '{wildcards.filename}'
                """

rule map_snp:
        input:
                "{filename}.tmp"
        output:
                "{filename}.map"
        run:
                with open(input[0]) as f:
                        line = f.readline()
                        ncol = len(line.split())
                if (ncol == 1):
                        shell(
                        """
                        module load java-sdk-1.8.0
                        java -Xmx4g -jar /project/saleheenlab/software/SNPTRACKER/snptracker/snptracker.jar --no-web \
                        --in '{input}' \
                        --rsid 1 \
                        --ref hg38 \
                        --out '{output}'
                        """)
                else:
                        shell(
                        """
                        module load java-sdk-1.8.0
                        java -Xmx4g -jar /project/saleheenlab/software/SNPTRACKER/snptracker/snptracker.jar --no-web \
                        --in '{input}' \
                        --chr 1 \
                        --pos 2 \
                        --ref hg38 \
                        --out '{output}'
                        """)
