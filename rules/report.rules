############################### PROMIS GWAS1/2 Report

rule manhattan_report:
  input:
    Rmd = "report/report.Rmd",
    gwa = "PROJECT/{project}/x{match}/assoc/{project}-{pop}.gwa",
    hwe = "PROJECT/{project}/x{match}/assoc/{project}-{pop}.hwe",
    frq = "PROJECT/{project}/x{match}/assoc/{project}-{pop}.frq.cc"
  params:
    p = "{project}",
    m = "{match}",
    pop = "{pop}"
  output:
    html = "report/{project}-x{match}-{pop}.html"
  shell:
    """
    Rscript report/runReport.R '{params.p}' '{params.m}' '{params.pop}'
    """
